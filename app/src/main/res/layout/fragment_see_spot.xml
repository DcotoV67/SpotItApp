<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeeSpotFragment"
    android:orientation="vertical"
    android:padding="100px">


    <TextView
        android:id="@+id/spot_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del Spot"
        android:textSize="80px"
        android:textStyle="bold"/>

    <LinearLayout
        android:orientation="vertical"
        android:padding="50px"
        android:background="@drawable/border"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/spot_img"
            android:layout_width="match_parent"
            android:layout_height="222dp"
            android:src="@drawable/perfil" />

        <TextView
            android:id="@+id/spot_labels"
            android:textStyle="italic"
            android:text="#Spot #Playa #Deporte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/spot_description"
            android:text="DescripciÃ³n del Spot:"
            android:textStyle="bold"
            android:textSize="60px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed at neque et arcu semper gravida sed ac metus. Morbi pulvinar orci ac dui efficitur, sit amet sollicitudin lectus fringilla. Quisque eu enim ac odio varius commodo. Nulla pulvinar viverra porttitor. Suspendisse molestie tempus sem, ut ultricies elit suscipit vitae. Praesent molestie lectus quis imperdiet tincidunt. Proin vestibulum auctor diam in pellentesque."
            android:padding="20px"/>

        <CheckBox
            android:layout_marginTop="100px"
            android:layout_marginBottom="20px"
            android:textSize="60px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Compartir Spot"/>

        <Button
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_delete_spot"
            android:text="Eliminar Spot"/>

    </LinearLayout>

</LinearLayout>